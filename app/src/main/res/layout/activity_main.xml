<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_below_to_scan"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/qr_button"
        android:contentDescription="@string/qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_baseline_qr_code_scanner_24"
        android:backgroundTint="#8c9eff"
        android:layout_below="@+id/txtview"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text=""
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qr_button"/>

    <ImageButton
        android:id="@+id/data"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_baseline_dataset_24"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/to_know_data" />

</RelativeLayout>